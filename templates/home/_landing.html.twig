<div class="jumbotron jumbotron-fluid bg-none text-white mb-0">
  <div class="container-fluid">
    <div class="row align-items-center">
      <div class="col-logo col-sm-4 col-md-5 col-lg-6 col-xl-5 order-sm-last">
        {% include 'components/logo.html.twig' %}
      </div>

      <div class="col-identity col-sm-8 col-md-7 col-lg-6 col-xl-7">
        {% include 'components/identity.html.twig' with { set_titles : false } %}

        <hr class="mt-5 mb-4">

        <ul class="list-contact-method mb-2">
          <li>
            <span class="icon icon-phone-handset"></span>
            {{ identity.phone }}
          </li>
          <li>
            <span class="icon icon-envelope"></span>
            {{ identity.mail }}
          </li>
          <li>
            <span class="icon icon-map-marker"></span>
            {{ identity.location.city }}, {{ identity.location.department }}
          </li>
          {% if identity.social_networks is defined %}
            {% if identity.social_networks.linkedin is defined %}
            <li class="position-relative">
              <span class="icon icon-sn-linkedin-circle"></span>
              <a class="stretched-link" href="{{ identity.social_networks.linkedin }}" target="_blank">
                Linkedin
              </a>
            </li>
            {% endif %}
          {% endif %}
        </ul>

      {% set is_freelance = (identity.is_freelance is defined) ? identity.is_freelance : true %}
      {% if is_freelance == true %}
        <a class="btn-toggle-form-contact btn btn-primary my-3"
          href="#contact-form" role="button" data-check-is-quote="true">
          Demande de devis
        </a>
      {% endif %}
        <a class="btn-toggle-form-contact btn btn-outline-light {% if is_freelance == true %}mx-3{% else %}my-3{% endif %}"
          href="#contact-form" role="button">
          Me contacter
        </a>
      </div>
    </div>
  </div>
</div>
