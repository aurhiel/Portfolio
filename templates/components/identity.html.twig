{% set set_titles = (set_titles is defined) ? set_titles : true %}

<div class="shuri-identity">
{% if set_titles %}
  <h1 class="--names">
    <span>{{ identity.last_name }} {{ identity.first_name }}</span>
    {% if identity.is_freelance is defined and identity.is_freelance == true %}
      <span class="--badge">Freelance</span>
    {% endif %}
  </h1>
  <h2 class="--status">{{ identity.status }}</h2>
{% else %}
  <div class="--names">
    <span>{{ identity.last_name }} {{ identity.first_name }}</span>
    {% if identity.is_freelance is defined and identity.is_freelance == true %}
      <span class="--badge">Freelance</span>
    {% endif %}
  </div>
  <div class="--status">{{ identity.status }}</div>
{% endif %}
</div>
